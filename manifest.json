{
  "name": "ZoomZoom",
  "version": "0.1",
  "author": "Samuel Nunes",
  "description": "ZoomZoom",

  "content_scripts": [
    {
      "js": [ "jquery-3.0.0.js", "notify.js", "main.js" ],
      "matches": [ "*://*/*" ]
    }
  ],
  
  "locale": "en",
  "default_locale": "en",

  "permissions": [ "*://*/*" ],
  "icons": {
    "128": "icons/zz_icon_128.png",
    "48": "icons/zz_icon_48.png",
    "16": "icons/zz_icon_16.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "minimum_edge_version": "37.14316.1000.0",
  "web_accessible_resources": [ "loading.gif" ]
}
